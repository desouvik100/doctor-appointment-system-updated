  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Book Appointment",
      "short_name": "Book",
      "description": "Book a doctor appointment",
      "url": "/patient/dashboard?action=book",
      "icons": [{ "src": "icons/shortcut-book.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "My Appointments",
      "short_name": "Appointments",
      "description": "View your appointments",
      "url": "/patient/dashboard",
      "icons": [{ "src": "icons/shortcut-appointments.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Find Doctors",
      "short_name": "Doctors",
      "description": "Search for doctors",
      "url": "/doctors",
      "icons": [{ "src": "icons/shortcut-doctors.png", "sizes": "96x96", "type": "image/png" }]
    }
  ],
  "screenshots": [
